<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UbahActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c2c4c4"
                    android:orientation="horizontal" >

                    <TableRow
                        android:id="@+id/table1"
                        android:layout_width="wrap_content"
                        android:layout_height="75sp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10sp"
                        android:paddingRight="10sp" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:gravity="center_vertical"
                            android:paddingTop="10sp"
                            android:text="PENGATURAN"
                            android:textSize="20sp" />
                    </TableRow>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/bt_simpan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/bt_simpan"
                            android:paddingLeft="15sp"
                            android:paddingRight="15sp"
                            android:text="Simpan"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70sp"
            android:background="#FFFFFF"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20sp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="23sp"
                            android:text="Logo"
                            android:textSize="17sp" />
                    </TableRow>

                    <LinearLayout
                        android:id="@+id/table_button_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#d8d8d8"
                        android:orientation="vertical"
                        android:paddingBottom="10sp" >

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/no_image" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="#d8d8d8"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5sp"
                                android:text="* Copy gambar di internal storage pada folder &apos;Pictures&apos; simpan dengan nama &apos;logo&apos;"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TableRow
                    android:id="@+id/tabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="23sp"
                            android:text="Background Resi"
                            android:textSize="17sp" />
                    </TableRow>
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#d8d8d8"
                    android:orientation="vertical"
                    android:paddingBottom="10sp" >

                    <ImageView
                        android:id="@+id/background"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d8d8d8"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:text="* Copy gambar di internal storage pada folder &apos;Pictures&apos; simpan dengan nama &apos;background&apos;"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_nama" />

                    <EditText
                        android:id="@+id/nama_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Nama Toko"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/Tabel_Tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_slogan" />

                    <EditText
                        android:id="@+id/slogan_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Slogan Toko"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="13sp"
                        android:background="@drawable/ic_alamat" />

                    <EditText
                        android:id="@+id/alamat_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Alamat Toko"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_kode" />

                    <EditText
                        android:id="@+id/prefix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Prefix Kode Resi"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_opsi" />

                    <EditText
                        android:id="@+id/opsipengiriman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Opsi Pengiriman"
                        android:maxLength="50"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TextView
                    android:id="@+id/database"
                    android:layout_width="match_parent"
                    android:layout_height="23sp"
                    android:textSize="17sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>