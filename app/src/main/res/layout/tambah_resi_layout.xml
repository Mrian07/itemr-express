<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:orientation="horizontal" >

            <TableRow
                android:id="@+id/table1"
                android:layout_width="wrap_content"
                android:layout_height="75sp"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="10sp"
                android:paddingRight="10sp" >

                <ImageView
                    android:id="@+id/bt_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/ic_setting" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10sp"
                    android:text="Resi Baru"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </TableRow>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bt_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bt_simpan"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="Simpan"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:background="@drawable/back_judul"
                    android:gravity="center_vertical">

                    <TableRow
                        android:id="@+id/table_button_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:id="@+id/TableRow03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="145sp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10sp"
                                android:text="Agen/Mitra"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10sp"
                                android:text=": "
                                android:textColor="#FFFFFF"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20sp">

                                <TextView
                                    android:id="@+id/nama_agen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:textColor="#FFFFFF"
                                    android:textSize="17sp"
                                    android:hint="Silahkan Pilih Mitra"
                                    android:textColorHint="#FFFFFF"
                                    android:padding="5dp" />

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:id="@+id/imageView"
                                    android:background="#ffffff" />
                            </LinearLayout>

                        </TableRow>
                    </TableRow>

                    <TableRow
                        android:id="@+id/LayoutJasaPengiriman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="145sp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10sp"
                                android:text="Jenis Pengiriman"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10sp"
                                android:text=": "
                                android:textColor="#FFFFFF"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20sp">

                                <TextView
                                    android:id="@+id/opsipengiriman"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:textColor="#FFFFFF"
                                    android:textSize="17sp"
                                    android:hint="Silahkan Pilih Metode"
                                    android:textColorHint="#FFFFFF"
                                    android:padding="5dp" />

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:id="@+id/imageView3"
                                    android:background="#ffffff" />
                            </LinearLayout>

                        </TableRow>
                    </TableRow>
                </LinearLayout>

                <TableRow
                    android:id="@+id/LayoutPengirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_pengirim" />

                    <EditText
                        android:id="@+id/pengirim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5sp"
                        android:ems="10"
                        android:hint="Pengirim"
                        android:maxLength="40"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/LayoutPenerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_penerima" />

                    <EditText
                        android:id="@+id/penerima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Penerima"
                        android:maxLength="50"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/LayoutBank">

                    <TableRow
                        android:id="@+id/Tabel_Tujuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="10sp"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="15sp"
                            android:background="@drawable/ic_bank" />

                        <EditText
                            android:id="@+id/bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Bank"
                            android:maxLength="50"
                            android:textSize="17sp" >
                        </EditText>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="13sp"
                            android:background="@drawable/ic_rekening" />

                        <EditText
                            android:id="@+id/no_rek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="No Rekening"
                            android:inputType="number"
                            android:maxLength="50"
                            android:textSize="17sp" >
                        </EditText>
                    </TableRow>
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_uang" />

                    <TextView
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Rp "
                        android:textColor="#919191"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-7sp"
                        android:ems="10"
                        android:hint="Jumlah"
                        android:inputType="number"
                        android:maxLength="50"
                        android:textSize="17sp" >
                    </EditText>

                    <TextView
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5sp"
                        android:text=",- "
                        android:textColor="#919191"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="23sp"
                        android:text="Catatan"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/line_profil_bottom3"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:background="#c2c4c4" >
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e0e0"
                        android:ems="10"
                        android:minHeight="120sp"
                        android:padding="5sp"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TextView
                    android:id="@+id/database"
                    android:layout_width="match_parent"
                    android:layout_height="23sp"
                    android:textSize="17sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>