<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaruActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222222" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="75sp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10sp" >

                        <ImageView
                            android:id="@+id/bt_closepengaturan"
                            android:layout_width="wrap_content"
                            android:layout_height="59sp"
                            android:gravity="center_vertical"
                            android:onClick="bt_closeeditprofil"
                            android:src="@drawable/bt_closepengaturan" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/table1"
                        android:layout_width="wrap_content"
                        android:layout_height="75sp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10sp"
                        android:paddingRight="10sp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:gravity="center_vertical"
                            android:paddingTop="10sp"
                            android:text="Pengaturan"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </TableRow>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/bt_simpan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/bt_simpan"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Simpan"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70sp"
            android:background="#FFFFFF"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20sp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="23sp"
                            android:text="Logo"
                            android:textSize="17sp" />
                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#d8d8d8"
                        android:orientation="vertical"
                        android:paddingBottom="10sp" >

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="100sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10sp"
                            android:focusable="true"
                            android:src="@drawable/no_image" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="#d8d8d8"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5sp"
                                android:text="* Copy gambar (.PNG) di internal storage pada folder &apos;Pictures&apos; simpan dengan nama &apos;logo&apos;"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TableRow
                    android:id="@+id/tabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="23sp"
                            android:text="Background Resi"
                            android:textSize="17sp" />
                    </TableRow>
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#d8d8d8"
                    android:orientation="vertical"
                    android:paddingBottom="10sp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/background"
                        android:layout_width="wrap_content"
                        android:layout_height="200sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d8d8d8"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:text="* Copy gambar (.JPG) di internal storage pada folder &apos;Pictures&apos; simpan dengan nama &apos;background&apos;"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_nama" />

                    <EditText
                        android:id="@+id/nama_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Nama Toko"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/Tabel_Tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_slogan" />

                    <EditText
                        android:id="@+id/slogan_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Slogan Toko"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="13sp"
                        android:background="@drawable/ic_alamat" />

                    <EditText
                        android:id="@+id/alamat_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Alamat Toko"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_kode" />

                    <EditText
                        android:id="@+id/prefix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Prefix Kode Resi"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_opsi" />

                    <Spinner
                        android:id="@+id/opsipengiriman"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:layout_alignParentLeft="true"
                        android:popupBackground="#FFFFFF" />
                     <EditText
                        android:id="@+id/isiopsipengiriman"
                        android:layout_width="1sp"
                        android:layout_height="1sp">
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_chasier" />

                    <EditText
                        android:id="@+id/namaagen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Nama Cashier"
                        android:maxLength="50"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_kodechasier" />

                    <EditText
                        android:id="@+id/kodecashier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Kode Cashier"
                        android:maxLength="50"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/ic_telpchasier" />

                    <EditText
                        android:id="@+id/telpchasier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="No Telp Cashier"
                        android:inputType="phone"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/ic_keterangan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="23sp"
                        android:text="Keterangan"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/line_profil_bottom3"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:background="#c2c4c4" >
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e0e0"
                        android:ems="10"
                        android:minHeight="120sp"
                        android:padding="5sp"
                        android:textSize="17sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/ic_chasier" />

                    <Spinner
                        android:id="@+id/cashier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </TableRow>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10sp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="23sp"
                        android:text="Sheet ID"
                        android:layout_marginRight="10sp"
                        android:textSize="17sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/textView" />

                    <EditText
                        android:id="@+id/spreadsheet_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="17sp"
                        android:maxLength="50"
                        android:layout_toRightOf="@+id/textView"
                        android:layout_toLeftOf="@+id/btn_sheet_apply"
                        android:layout_toStartOf="@+id/btn_sheet_apply">
                    </EditText>

                    <ImageView
                        android:id="@+id/btn_sheet_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_done_black_24dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>